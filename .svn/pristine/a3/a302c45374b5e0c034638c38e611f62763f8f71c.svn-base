<script>

function delInfo(id)
{
	if(confirm("确认删除该联系人吗？"))
	{
		$.post(
			"/index.php/contact/del",
			{
				id:id
			},
			function (data) //回传函数
			{
				if(data=='success')
				{
					alert('删除成功');
					window.location.href='/index.php/contact/contact_manage';
				}
				else
				{
					alert(data);
				}
			}
		);
	}
}
</script>

